<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myaddressbook.Activities.ActGridSortSetting"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tip_item1"
            android:id="@+id/textView8"
            android:layout_marginBottom="5dp"
            android:textColor="#3875b3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tip_item2"
            android:id="@+id/textView9"
            android:textColor="#3875b3" />
    </LinearLayout>

    <com.dynamicgrid.DynamicGridView

        android:id="@+id/dynamic_grid"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:numColumns="@integer/column_count"
        android:listSelector="@drawable/grid_item_color_bg"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp" />
</LinearLayout>